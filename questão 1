//Crie uma função eh_primo que recebe um inteiro ne retorna se ele é primo ou não.

//Exemplos:

//eh_primo(4) -> 0
//eh_primo(7) -> 1
//Dicas:

//A operação % calcula o resto entre dois valores.
//11 % 4 = 3
//Em C, normalmente usamos 1 e 0 para representar verdadeiro e falso, respectivamente.

#include <stdio.h>
#include <stdbool.h>
#include <math.h>

bool primo(int a){ //uso bool para usar o true e false
    int i;
    if (a<=1){
        return false;}
    for (i=2; i<=sqrt(a); i++){
       if (a%i==0){ 
           return false;
    }
} 
    return true;
}
int main(void){
    int num;
    bool resposta;
    printf("coloque um número:");
    scanf("%d",&num);
    resposta= primo(num);
     if (resposta) {
        printf("%d é primo.\n", num);
    } else {
        printf("%d não é primo.\n", num);
    }

}
